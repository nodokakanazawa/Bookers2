<div class="container">
  <div class="row">
    <div class="col-md-3">
        <%= render 'list1', user: @user %>
        <%= render 'books/list', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
        <table class="table">
            <thead>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
            </thead>
            <tbody>
            <% @books.each do |book| %>
            <tr>
              <td><%= link_to user_path(book.user) do %> <%= image_tag book.user.get_profile_image(100,100) %> <% end %></td>
              <td><%= link_to book.title ,book_path(book) %></td>
              <td><%= book.body %></td>
              <td><%= link_to book_favorites_path(book),method: :post do %>
                  <i class="far fa-heart"></i><%= book.favorites.count %> いいね</td>
                  <% end %>
              <td>コメント数：<%= book.book_comments.count %></td>
            </tr>
            <% end %>
            </tbody>
        </table>
    </div>
  </div>
</div>


